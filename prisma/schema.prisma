// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model OsuUser {
    id                 Int        @id
    username           String
    registration_date  DateTime   @default(now())
    last_activity_date DateTime   @default(now())
    restricted         Boolean    @default(false)
    scores             OsuScore[]
    pp_score           Float?
    User               User?
    stats              OsuStats[]
    enabled            Boolean    @default(true) //is from latvia
    last_checked       DateTime   @default(now())
}

model DiscordUser {
    id                 BigInt   @id
    username           String
    registration_date  DateTime
    last_activity_date DateTime
    deleted            Boolean
    User               User?
}

model User {
    id              Int          @id @default(autoincrement())
    osu_user_id     Int?         @unique
    discord_user_id BigInt       @unique
    osu_user        OsuUser?     @relation(fields: [osu_user_id], references: [id])
    discord_user    DiscordUser? @relation(fields: [discord_user_id], references: [id])
    in_server       Boolean      @default(true)
}

model OsuScore {
    id         BigInt   @id @default(autoincrement())
    user_id    Int
    beatmap_id Int
    ruleset_id Int
    data       Json
    created_at DateTime
    updated_at DateTime
    deleted_at DateTime
    User       OsuUser  @relation(fields: [user_id], references: [id])
}

model OsuStats {
    id           BigInt   @id @default(autoincrement())
    user_id      Int
    stat_name    String
    stat_value   String
    User         OsuUser  @relation(fields: [user_id], references: [id])
    last_updated DateTime
    @@unique([user_id, stat_name])
}
